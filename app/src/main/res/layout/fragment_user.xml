<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.user.UserFragment"
    android:background="@drawable/bg_user_2">

    <TextView
        android:id="@+id/txvTitle"
        android:layout_marginTop="20dp"
        android:textStyle="bold"
        android:layout_centerHorizontal="true"
        android:textColor="#000"
        android:textSize="27sp"
        android:fontFamily="@font/poppins_black"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/profile"/>

    <de.hdodenhof.circleimageview.CircleImageView
        android:layout_marginTop="70dp"
        android:layout_centerHorizontal="true"
        android:src="@drawable/ex_avatar_1"
        android:id="@+id/img_profile"
        android:layout_width="115dp"
        android:layout_height="115dp">
    </de.hdodenhof.circleimageview.CircleImageView>

    <TextView
        android:id="@+id/txvDisplayName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/img_profile"
        android:layout_centerHorizontal="true"
        android:fontFamily="@font/poppins_black"
        android:text="Tên người dùng"
        android:textColor="#707070"
        android:textSize="21sp"
        android:textStyle="bold">

    </TextView>

    <TextView

        android:id="@+id/txvEmail"
        android:text="caongocnguyenngu@gmail.com"
        android:textSize="17sp"
        android:fontFamily="@font/poppins_light"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/txvDisplayName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

    </TextView>

    <ImageButton
        android:id="@+id/btn_change_pwd"
        android:layout_width="320dp"
        android:layout_height="90dp"
        android:layout_below="@+id/txvEmail"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="90dp"
        android:background="@null"
        android:scaleType="fitXY"
        android:src="@drawable/btn_change_pwd"
        />

    <ImageButton
        android:id="@+id/btn_change_name"
        android:layout_width="320dp"
        android:layout_height="90dp"
        android:scaleType="fitXY"
        android:src="@drawable/btn_change_name"
        android:background="@null"
        android:layout_below="@+id/btn_change_pwd"
        android:layout_centerHorizontal="true"
        />

    <ImageButton
        android:id="@+id/btn_logout"
        android:layout_width="320dp"
        android:layout_height="90dp"
        android:src="@drawable/btn_logout"
        android:background="@null"
        android:scaleType="fitXY"
        android:layout_below="@+id/btn_change_name"
        android:layout_centerHorizontal="true"
        />


</RelativeLayout>