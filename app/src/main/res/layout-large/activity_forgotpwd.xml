<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/white_rectangle_background">

    <ImageButton
        android:id="@+id/btn_back"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:layout_marginTop="38dp"
        android:layout_marginLeft="20dp"
        android:background="@null"
        android:scaleType="fitXY"
        android:src="@drawable/ic_back_1" />
    <TextView
        android:id="@+id/txv_forgot"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="28sp"
        android:layout_marginTop="100dp"
        android:fontFamily="@font/poppins_black"
        android:gravity="center"
        android:text="Forgot Password?" />

    <ImageView
        android:id="@+id/forgot_img"
        android:layout_width="226dp"
        android:layout_height="219dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="150dp"
        app:srcCompat="@drawable/img_forgot" />

    <TextView
        android:id="@+id/txv_email_forgot"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/forgot_img"
        android:textSize="25sp"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="16dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="0dp"
        android:fontFamily="@font/poppins_black"
        android:gravity="center"
        android:text="@string/enter_your_email" />

    <TextView
        android:id="@+id/txv_email_nofi"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="25sp"
        android:layout_marginTop="20dp"
        android:layout_below="@+id/txv_email_forgot"
        android:fontFamily="@font/poppins_regular"
        android:gravity="center"
        android:text="@string/we_send_email" />

    <EditText
        android:id="@+id/editTextEmailForgot"
        android:layout_width="400dp"
        android:layout_height="wrap_content"
        android:hint="@string/enter_email_address"
        android:fontFamily="@font/poppins_regular"
        android:layout_marginTop="20dp"
        android:gravity="center"
        android:inputType="textEmailAddress"
        android:maxLines="1"
        android:textSize="22sp"
        android:layout_below="@+id/txv_email_nofi"
        android:layout_centerHorizontal="true"/>

    <ImageButton
        android:id="@+id/btn_send"
        android:layout_width="280dp"
        android:layout_height="120dp"
        android:layout_below="@+id/editTextEmailForgot"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:background="@null"
        android:scaleType="fitXY"
        android:src="@drawable/btn_send" />
</RelativeLayout>